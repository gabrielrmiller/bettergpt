{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp dist/index.html dist/404.html",
    "build:404": "cp dist/index.html dist/404.html",
    "build:github": "cross-env VITE_BASE_BATH=/bettergpt/ vite build",
    "postbuild": "rm -rf docs && cp -r dist docs",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:github && gh-pages -d dist",
    "deploy:main": "npm run build && npm run copy-to-root",
    "copy-to-root": "cp -r dist/* ../ && cp dist/404.html ../404.html"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.2"
  }
}
